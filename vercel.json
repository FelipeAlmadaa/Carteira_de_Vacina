{
  "version": 2,
  "builds": [
    {
      "src": "back-end/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back-end/index.js"
    },
    {
      "src": "/(.*\\.(css|js|html|png|jpg|jpeg|gif|svg|ico|txt))$",
      "dest": "front/$1"
    },
    {
      "src": "/(.*)",
      "dest": "front/index.html"
    }
  ],
  "installCommand": "npm install --prefix back-end"
}


